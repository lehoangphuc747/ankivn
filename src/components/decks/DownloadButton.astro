<script>
  // Track download clicks and display download count in header
  document.addEventListener('DOMContentLoaded', () => {
    // Get slug from URL path
    const pathParts = window.location.pathname.split('/').filter(part => part);
    const slug = pathParts[pathParts.length - 1] || '';
    const fullSlug = `decks/${slug}`;
    
    // Fetch and display download count in header
    fetch(`https://view-counter.lphc664.workers.dev/${fullSlug}/download`, {
      method: 'GET',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(res => res.json())
    .then(data => {
      const downloadElement = document.querySelector('.download-number');
      if (downloadElement) {
        downloadElement.textContent = data.views.toLocaleString('vi-VN');
      }
    })
    .catch(err => {
      console.error('Error fetching download count:', err);
      const downloadElement = document.querySelector('.download-number');
      if (downloadElement) {
        downloadElement.textContent = '0';
      }
    });

    // Track download clicks
    const downloadLinks = document.querySelectorAll('.download-link');
    
    downloadLinks.forEach(link => {
      link.addEventListener('click', async (event) => {
        try {
          const response = await fetch(`https://view-counter.lphc664.workers.dev/${fullSlug}/download`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
          });
          const data = await response.json();
          console.log('Download count updated:', data);
          
          // Update download count in header
          const downloadElement = document.querySelector('.download-number');
          if (downloadElement) {
            downloadElement.textContent = data.views.toLocaleString('vi-VN');
          }
        } catch (err) {
          console.error('Error tracking download:', err);
        }
      });
    });
  });
</script>
