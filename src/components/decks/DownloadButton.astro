---
interface Downloads {
  author?: string;
  ankivn?: string;
  r2?: string;
  gdrive?: string;
  firebase?: string;
  onedrive?: string;
}
const { downloads } = Astro.props as { downloads?: Downloads };
const entries = Object.entries(downloads ?? {}).filter(([, v]) => !!v) as [string, string][];
const labels: Record<string, string> = {
  author: 'Tác giả gốc',
  ankivn: 'AnkiVN',
  r2: 'R2 CDN',
  gdrive: 'Google Drive',
  firebase: 'Firebase',
  onedrive: 'OneDrive',
};

const icons: Record<string, string> = {
  author: '👤',
  ankivn: '🎯', 
  r2: '☁️',
  gdrive: '📂',
  firebase: '🔥',
  onedrive: '📁',
};
---
{entries.length ? (
  <!-- Enhanced Download Section with Split Colors -->
  <div class="rounded-3xl shadow-2xl overflow-hidden">
    <!-- Header Section - Blue Background -->
    <div class="text-center py-6 px-6" style="background-color: #FEB21A;">
      <h3 class="text-2xl font-bold text-white mb-2">Tải xuống</h3>
      <div class="w-16 h-1 bg-white/30 mx-auto rounded-full"></div>
    </div>
    
    <!-- Content Section - White Background -->
    <div class="bg-white p-6">
      <!-- Download Buttons Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        {entries.map(([source, url]) => (
          <a 
            href={url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="group relative overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 hover:from-blue-50 hover:to-blue-100 border border-gray-200 hover:border-blue-300 rounded-2xl p-4 transition-all duration-200 ease-out will-change-transform hover:shadow-lg transform hover:scale-105"
          >
            <!-- Content -->
            <div class="relative flex items-center gap-3">
              <!-- Icon -->
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 group-hover:bg-blue-200 rounded-xl flex items-center justify-center transition-colors duration-200">
                <span class="text-2xl">{icons[source]}</span>
              </div>
              
              <!-- Text Content -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-600 group-hover:text-blue-600 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span class="text-gray-800 group-hover:text-blue-800 font-semibold text-sm transition-colors duration-200 truncate">{labels[source]}</span>
                </div>
              </div>
              
              <!-- Arrow Indicator -->
              <div class="flex-shrink-0 w-6 h-6 bg-gray-200 group-hover:bg-blue-200 rounded-full flex items-center justify-center transition-colors duration-200">
                <svg class="w-3 h-3 text-gray-600 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
      
      <!-- Bottom Decorative Elements -->
      <div class="mt-6 flex justify-center">
        <div class="flex gap-2">
          <div class="w-2 h-2 bg-blue-300 rounded-full animate-pulse"></div>
          <div class="w-2 h-2 bg-cyan-300 rounded-full animate-pulse" style="animation-delay: 0.2s"></div>
          <div class="w-2 h-2 bg-indigo-300 rounded-full animate-pulse" style="animation-delay: 0.4s"></div>
        </div>
      </div>
    </div>
  </div>
) : (
  <div class="bg-gradient-to-br from-slate-100 to-slate-200 rounded-3xl p-6 shadow-lg border border-slate-300">
    <div class="text-center">
      <div class="w-16 h-16 bg-slate-300 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-slate-600 mb-2">Chưa có link tải</h3>
      <p class="text-sm text-slate-500">Vui lòng quay lại sau</p>
    </div>
  </div>
)}
