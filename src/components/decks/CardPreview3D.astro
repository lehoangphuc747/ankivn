---
const { 
  title, 
  cover, 
  size, 
  category,
  interactive = true 
} = Astro.props as {
  title: string;
  cover?: string;
  size?: number;
  category?: string;
  interactive?: boolean;
};

const displayCover = cover ?? '/default-thumbnail.webp';
---

<div class={`deck-card-3d ${interactive ? 'interactive' : ''}`}>
  <!-- Card Stack Effect -->
  <div class="card-stack">
    <!-- Back cards for depth -->
    <div class="card-back card-back-3"></div>
    <div class="card-back card-back-2"></div>
    <div class="card-back card-back-1"></div>
    
    <!-- Main Card -->
    <div class="main-card">
      <!-- Card Header -->
      <div class="card-header">
        <div class="card-controls">
          <div class="control-dot red"></div>
          <div class="control-dot yellow"></div>
          <div class="control-dot green"></div>
        </div>
        <div class="card-logo">
          <span>AnkiVN</span>
        </div>
      </div>
      
      <!-- Card Content -->
      <div class="card-content">
        <!-- Preview Image -->
        <div class="image-container">
          <img 
            src={displayCover} 
            alt={title} 
            class="preview-image"
            loading="lazy" 
          />
          <div class="image-overlay">
            <div class="play-button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M8 5v14l11-7z" fill="currentColor"/>
              </svg>
            </div>
          </div>
        </div>
        
        <!-- Card Info -->
        <div class="card-info">
          <div class="card-title">{title}</div>
          {category && (
            <div class="card-category">üìö {category}</div>
          )}
          {size && (
            <div class="card-stats">
              <div class="stat-item">
                <span class="stat-number">{size.toLocaleString()}</span>
                <span class="stat-label">th·∫ª</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">‚òÖ 4.9</span>
                <span class="stat-label">ƒë√°nh gi√°</span>
              </div>
            </div>
          )}
        </div>
      </div>
      
      <!-- Card Actions -->
      <div class="card-actions">
        <slot name="actions">
          <button class="action-primary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M12 15v-6m-4 4l4 4 4-4M2 19h20" stroke="currentColor" stroke-width="2"/>
            </svg>
            T·∫£i v·ªÅ
          </button>
          <button class="action-secondary" title="Y√™u th√≠ch">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
          <button class="action-secondary" title="Chia s·∫ª">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8M16 6l-4-4-4 4M12 2v13" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </slot>
      </div>
    </div>
  </div>
  
  <!-- Floating Elements -->
  <div class="floating-badge hot">üî• Hot</div>
  <div class="floating-badge rating">‚≠ê 4.9</div>
</div>

<style>
  .deck-card-3d {
    position: relative;
    perspective: 1000px;
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .card-stack {
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.3s ease;
  }
  
  .interactive .card-stack:hover {
    transform: rotateY(-5deg) rotateX(5deg);
  }
  
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    opacity: 0.3;
  }
  
  .card-back-1 {
    transform: translateZ(-10px) translateX(2px) translateY(2px);
  }
  
  .card-back-2 {
    transform: translateZ(-20px) translateX(4px) translateY(4px);
    opacity: 0.2;
  }
  
  .card-back-3 {
    transform: translateZ(-30px) translateX(6px) translateY(6px);
    opacity: 0.1;
  }
  
  .main-card {
    position: relative;
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border-radius: 20px;
    padding: 24px;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(10px);
    transform: translateZ(0);
    transition: all 0.3s ease;
  }
  
  .interactive .main-card:hover {
    transform: translateZ(10px);
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(255, 255, 255, 0.8);
  }
  
  .card-header {
    display: flex;
    justify-content: between;
    align-items: center;
    margin-bottom: 20px;
  }
  
  .card-controls {
    display: flex;
    gap: 6px;
  }
  
  .control-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .control-dot.red { background: #ff5f57; }
  .control-dot.yellow { background: #ffbd2e; }
  .control-dot.green { background: #28ca42; }
  
  .card-logo {
    font-size: 12px;
    font-weight: 600;
    color: #64748b;
    font-family: -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  .image-container {
    position: relative;
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, #ddd6fe 0%, #c7d2fe 100%);
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 20px;
    group: hover;
  }
  
  .preview-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .interactive .image-container:hover .preview-image {
    transform: scale(1.05);
  }
  
  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.8), rgba(16, 185, 129, 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .interactive .image-container:hover .image-overlay {
    opacity: 1;
  }
  
  .play-button {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1f2937;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }
  
  .interactive .image-container:hover .play-button {
    transform: scale(1);
  }
  
  .card-info {
    margin-bottom: 20px;
  }
  
  .card-title {
    font-size: 18px;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 8px;
    line-height: 1.3;
  }
  
  .card-category {
    font-size: 14px;
    color: #6b7280;
    margin-bottom: 12px;
  }
  
  .card-stats {
    display: flex;
    gap: 20px;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 18px;
    font-weight: 700;
    color: #1f2937;
  }
  
  .stat-label {
    font-size: 12px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .card-actions {
    display: flex;
    gap: 12px;
  }
  
  .action-primary {
    flex: 1;
    background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%);
    color: white;
    border: none;
    border-radius: 12px;
    padding: 12px 16px;
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .action-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
  }
  
  .action-secondary {
    width: 44px;
    height: 44px;
    background: #f1f5f9;
    color: #64748b;
    border: none;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .action-secondary:hover {
    background: #e2e8f0;
    color: #475569;
    transform: translateY(-1px);
  }
  
  .floating-badge {
    position: absolute;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    z-index: 10;
  }
  
  .floating-badge.hot {
    top: -8px;
    right: -8px;
    background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
    color: white;
    animation: pulse 2s infinite;
  }
  
  .floating-badge.rating {
    bottom: 60px;
    left: -12px;
    background: rgba(255, 255, 255, 0.9);
    color: #1f2937;
    border: 1px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  @media (max-width: 640px) {
    .deck-card-3d {
      max-width: 300px;
    }
    
    .main-card {
      padding: 20px;
    }
    
    .card-title {
      font-size: 16px;
    }
    
    .stat-number {
      font-size: 16px;
    }
  }
</style>
