---
import ImageGallery from '@/components/decks/ImageGallery.astro';

interface Props {
  images?: Array<{
    src: string;
    alt: string;
  }>;
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
}

const { images = [], spacing = 'xl' } = Astro.props;
---

{images.length > 0 && (
  <div class="bg-white backdrop-blur-sm rounded-3xl shadow-2xl border border-gray-200/50 overflow-hidden mb-8">
    <!-- Preview Header -->
    <div class="px-6 py-4 border-b border-gray-200/50" style="background-color: #239BA7;">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background-color: #239BA7;">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
            <div class="text-lg font-bold text-white">Preview thẻ học</div>
            <div class="text-sm text-white/80">Xem trước giao diện và nội dung thẻ</div>
        </div>
      </div>
    </div>
    
    <!-- Preview Content -->
    <div class="p-6">
      <ImageGallery images={images} spacing={spacing} />
    </div>
  </div>
)}
