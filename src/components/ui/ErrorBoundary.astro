---
export interface Props {
  title?: string;
  description?: string;
  showReload?: boolean;
  showHome?: boolean;
  className?: string;
}

const {
  title = 'Đã xảy ra lỗi',
  description = 'Xin lỗi, có lỗi không mong muốn đã xảy ra. Vui lòng thử lại sau.',
  showReload = true,
  showHome = true,
  className = ''
} = Astro.props;
---

<div class={`text-center py-16 px-4 ${className}`}>
  <div class="max-w-md mx-auto fade-in-scroll">
    <!-- Error Icon -->
    <div class="mb-6">
      <div class="relative">
        <svg class="w-20 h-20 text-red-500 mx-auto animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        
        <!-- Animated rings -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-24 h-24 border-2 border-red-200 rounded-full animate-ping"></div>
        </div>
      </div>
    </div>

    <!-- Error Message -->
    <div class="space-y-4 mb-8">
      <h2 class="text-2xl font-bold text-gray-900">
        {title}
      </h2>
      <p class="text-gray-600 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-4">
      {showReload && (
        <button 
          onclick="window.location.reload()" 
          class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-all duration-200 hover-lift btn-ripple"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Thử lại
        </button>
      )}
      
      {showHome && (
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a 
            href="/" 
            class="inline-flex items-center justify-center px-4 py-2 text-gray-700 font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-all duration-200"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Về trang chủ
          </a>
          
          <button 
            onclick="window.history.back()" 
            class="inline-flex items-center justify-center px-4 py-2 text-gray-700 font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-all duration-200"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
            </svg>
            Quay lại
          </button>
        </div>
      )}
    </div>

    <!-- Error Details -->
    <details class="mt-8 text-left">
      <summary class="text-sm text-gray-500 cursor-pointer hover:text-gray-700 transition-colors">
        Chi tiết lỗi
      </summary>
      <div class="mt-2 p-4 bg-gray-50 rounded-lg text-xs text-gray-600 font-mono">
        <p>Thời gian: {new Date().toLocaleString('vi-VN')}</p>
        <p>URL: {Astro.url.pathname}</p>
        <p>User Agent: <span id="user-agent"></span></p>
      </div>
    </details>
  </div>
</div>

<script>
  // Add user agent info
  document.addEventListener('DOMContentLoaded', function() {
    const userAgentEl = document.getElementById('user-agent');
    if (userAgentEl) {
      userAgentEl.textContent = navigator.userAgent;
    }
  });
</script>

<style>
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-2px); }
    20%, 40%, 60%, 80% { transform: translateX(2px); }
  }
  
  .animate-pulse {
    animation: shake 2s ease-in-out infinite;
  }
</style>
