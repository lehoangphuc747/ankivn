---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  variant?: 'default' | 'dots' | 'pulse' | 'bounce';
  color?: 'blue' | 'gray' | 'white';
  className?: string;
  text?: string;
}

const {
  size = 'md',
  variant = 'default',
  color = 'blue',
  className = '',
  text
} = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6', 
  lg: 'w-8 h-8',
  xl: 'w-12 h-12'
};

const colorClasses = {
  blue: 'text-blue-600',
  gray: 'text-gray-600',
  white: 'text-white'
};

const spinnerClass = `${sizeClasses[size]} ${colorClasses[color]} ${className}`;
---

<div class="flex items-center justify-center gap-2">
  {variant === 'default' && (
    <svg class={`animate-spin ${spinnerClass}`} fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
  )}

  {variant === 'dots' && (
    <div class="flex space-x-1">
      <div class={`${sizeClasses[size]} bg-current rounded-full animate-bounce`} style="animation-delay: 0s"></div>
      <div class={`${sizeClasses[size]} bg-current rounded-full animate-bounce`} style="animation-delay: 0.1s"></div>
      <div class={`${sizeClasses[size]} bg-current rounded-full animate-bounce`} style="animation-delay: 0.2s"></div>
    </div>
  )}

  {variant === 'pulse' && (
    <div class={`${sizeClasses[size]} bg-current rounded-full animate-pulse`}></div>
  )}

  {variant === 'bounce' && (
    <div class={`${sizeClasses[size]} bg-current rounded animate-bounce`}></div>
  )}

  {text && (
    <span class={`text-sm ${colorClasses[color]} animate-pulse`}>
      {text}
    </span>
  )}
</div>

<style>
  @keyframes bounce-delay {
    0%, 80%, 100% {
      transform: scale(0);
    }
    40% {
      transform: scale(1);
    }
  }
  
  .animate-bounce:nth-child(1) {
    animation: bounce-delay 1.4s infinite ease-in-out both;
    animation-delay: -0.32s;
  }
  
  .animate-bounce:nth-child(2) {
    animation: bounce-delay 1.4s infinite ease-in-out both;
    animation-delay: -0.16s;
  }
  
  .animate-bounce:nth-child(3) {
    animation: bounce-delay 1.4s infinite ease-in-out both;
  }
</style>
