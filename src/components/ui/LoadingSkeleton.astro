---
export interface Props {
  variant?: 'card' | 'text' | 'image' | 'list' | 'custom';
  count?: number;
  className?: string;
  width?: string;
  height?: string;
}

const {
  variant = 'card',
  count = 1,
  className = '',
  width,
  height
} = Astro.props;

const baseClass = 'animate-pulse bg-gray-200 rounded';
const customStyle = width || height ? `width: ${width || 'auto'}; height: ${height || 'auto'};` : '';
---

{variant === 'card' && (
  <div class={`space-y-6 ${className}`}>
    {Array.from({ length: count }).map((_, i) => (
      <div key={i} class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <!-- Image skeleton -->
        <div class={`${baseClass} aspect-video`}></div>
        
        <!-- Content skeleton -->
        <div class="p-5 space-y-3">
          <!-- Category badge -->
          <div class={`${baseClass} h-6 w-20`}></div>
          
          <!-- Title -->
          <div class="space-y-2">
            <div class={`${baseClass} h-6 w-full`}></div>
            <div class={`${baseClass} h-6 w-3/4`}></div>
          </div>
          
          <!-- Metadata -->
          <div class="flex gap-4">
            <div class={`${baseClass} h-4 w-24`}></div>
            <div class={`${baseClass} h-4 w-20`}></div>
          </div>
          
          <!-- Tags -->
          <div class="flex gap-2">
            <div class={`${baseClass} h-6 w-16`}></div>
            <div class={`${baseClass} h-6 w-20`}></div>
            <div class={`${baseClass} h-6 w-14`}></div>
          </div>
        </div>
      </div>
    ))}
  </div>
)}

{variant === 'text' && (
  <div class={`space-y-2 ${className}`}>
    {Array.from({ length: count }).map((_, i) => (
      <div key={i} class={`${baseClass} h-4`} style={customStyle}></div>
    ))}
  </div>
)}

{variant === 'image' && (
  <div class={`${baseClass} ${className}`} style={customStyle || 'width: 100%; height: 200px;'}></div>
)}

{variant === 'list' && (
  <div class={`space-y-4 ${className}`}>
    {Array.from({ length: count }).map((_, i) => (
      <div key={i} class="flex items-center space-x-4">
        <div class={`${baseClass} h-12 w-12 rounded-full`}></div>
        <div class="flex-1 space-y-2">
          <div class={`${baseClass} h-4 w-1/2`}></div>
          <div class={`${baseClass} h-3 w-3/4`}></div>
        </div>
      </div>
    ))}
  </div>
)}

{variant === 'custom' && (
  <div class={`${baseClass} ${className}`} style={customStyle}></div>
)}

<style>
  @keyframes shimmer {
    0% {
      background-position: -200px 0;
    }
    100% {
      background-position: calc(200px + 100%) 0;
    }
  }
  
  .animate-pulse {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200px 100%;
    animation: shimmer 1.5s infinite;
  }
</style>
