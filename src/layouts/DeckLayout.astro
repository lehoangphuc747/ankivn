    <div class="relative w-full">
      <div class="py-12 lg:py-16 px-4 sm:px-6">
        <div class="max-w-4xl mx-auto">
          <!-- Breadcrumb -->
          <div class="mb-6">
            <Breadcrumb items={breadcrumbItems} />
          </div>

          <div class="grid lg:grid-cols-3 gap-8 items-start">
            <!-- Cover Image -->
            <div class="lg:col-span-1">
              <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-6 border border-white/20 shadow-xl">
                <div class="aspect-video bg-gradient-to-br from-blue-50 to-emerald-50 rounded-2xl overflow-hidden">
                  <img 
                    src={displayCover} 
                    alt={title} 
                    class="w-full h-full object-cover"
                    loading="lazy" 
                  />
                </div>
              </div>
            </div>

            <!-- Deck Info -->
            <div class="lg:col-span-2">
              <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-6 lg:p-8 border border-white/20 shadow-xl">
                <!-- Category Badge -->
                {category && (
