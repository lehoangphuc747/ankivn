---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ImageViewer from '@/components/decks/ImageViewer.jsx';
import Breadcrumb from '@/components/common/Breadcrumb.astro';
import ReadingProgress from '@/components/common/ReadingProgress.astro';

const { title, date, cover, category, subCategory, size, tags = [], author } = Astro.props as { 
  title: string; 
  date?: string; 
  cover?: string;
  category?: string;
  subCategory?: string;
  size?: number;
  tags?: string[];
  author?: string;
};
const displayCover = cover ?? '/default-thumbnail.webp';

// Build breadcrumb items
const breadcrumbItems = [
  { label: 'B·ªô th·∫ª', href: '/decks' },
  { label: title, current: true }
];
---
<BaseLayout title={title}>
  <!-- Reading Progress Bar -->
  <ReadingProgress />
  
  <!-- Hero Section for Deck -->
  <section class="hero-section-full">
    <!-- Background decorations -->
    <div class="hero-bg-decorations">
      <div class="hero-radial-overlay"></div>
      <div class="hero-side-blur-right"></div>
      <div class="hero-side-blur-left"></div>
