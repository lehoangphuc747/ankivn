---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Badge from '@/components/common/Badge.astro';
import ImageGallery from '@/components/decks/ImageGallery.astro';
import PreviewSection from '@/components/decks/PreviewSection.astro';
import SharingButtons from '@/components/common/SharingButtons.astro';

const { 
  title, 
  date, 
  cover, 
  category, 
  subCategory, 
  tags = [], 
  author, 
  authorLink, 
  previewImages = [],
  viewCount  // 1. NH·∫¨N PROP VIEW COUNT
} = Astro.props as { 
  title: string;
  date?: string; 
  cover?: string;
  category?: string;
  subCategory?: string;
  tags?: string[];
  author?: string;
  authorLink?: string;
  previewImages?: Array<{
    src: string;
    alt: string;
  }>;
  viewCount?: number; // 2. KHAI B√ÅO KI·ªÇU D·ªÆ LI·ªÜU
};
const displayCover = cover ?? '/default-thumbnail.webp';
---
<BaseLayout title={title}>
  <!-- Simplified Header Section -->
  <section class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 border-b border-gray-200">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
      
      <!-- Back Navigation -->
      <div class="mb-6">
        <a 
          href="/decks" 
          class="inline-flex items-center gap-4 px-4 py-2 bg-white hover:bg-gray-50 rounded-lg border border-gray-200 text-gray-700 hover:text-gray-900 transition-all duration-200 shadow-sm hover:shadow-md"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="font-medium">T·∫•t c·∫£ b·ªô th·∫ª</span>
        </a>
      </div>

      <!-- Title and Meta Info -->
      <div class="text-center space-y-6">
        
        <!-- Title -->
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 leading-tight">
          {title}
        </h1>

        <!-- Meta Information Row -->
        <div class="flex flex-wrap justify-center items-center gap-4 text-sm">
          <!-- Category -->
          {category && (
            <a 
              href={`/decks?category=${encodeURIComponent(category)}`}
              class="inline-flex items-center px-3 py-1.5 bg-blue-100 hover:bg-blue-200 text-blue-800 hover:text-blue-900 font-medium rounded-lg border border-blue-200 hover:border-blue-300 transition-colors"
            >
              üìö {category}
            </a>
          )}

          <!-- Subcategory -->
          {subCategory && (
            <a 
              href={`/decks?category=${encodeURIComponent(category || '')}&sub=${encodeURIComponent(subCategory)}`}
              class="inline-flex items-center px-3 py-1.5 bg-purple-100 hover:bg-purple-200 text-purple-800 hover:text-purple-900 font-medium rounded-lg border border-purple-200 hover:border-purple-300 transition-colors"
            >
              {subCategory}
            </a>
          )}

          <!-- Author -->
          {author && (
            <div class="flex items-center gap-1.5">
              <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {authorLink ? (
                <a href={authorLink} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 hover:underline">
                  {author}
                </a>
              ) : (
                <span class="text-gray-700">{author}</span>
              )}
            </div>
          )}

          <!-- Date -->
          {date && (
            <div class="flex items-center gap-1.5 text-gray-600">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{new Date(date).toLocaleDateString('vi-VN')}</span>
            </div>
          )}

          <!-- TH√äM: View counter display -->
          {viewCount !== undefined && (
            <div class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-100 text-green-800 font-medium rounded-lg border border-green-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <span class="text-sm">{(viewCount || 0).toLocaleString('vi-VN')}</span>
            </div>
          )}
        </div>

        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap justify-center gap-4">
            {tags.map(tag => (
              <Badge variant="outline" size="sm">
                #{tag}
              </Badge>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Main Content Area -->
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    
    <!-- Preview Images Section -->
    {previewImages.length > 0 && (
      <section class="mb-8">

        <PreviewSection images={previewImages} />
      </section>
    )}
    
    <!-- Content Section -->
    <section class="mb-8">
      <!-- Content Card -->
      <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
        <!-- Content Header -->
        <div class="px-6 py-4 border-b border-gray-200/50" style="background-color: #ED3F27;">
          <div class="flex items-center" style="gap: 1rem;">
            <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background-color: #ED3F27;">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <div class="text-lg font-bold text-white">M√¥ t·∫£ chi ti·∫øt</div>
              <div class="text-sm text-white/80">Th√¥ng tin ƒë·∫ßy ƒë·ªß v·ªÅ b·ªô th·∫ª</div>
            </div>
          </div>
        </div>
        
        <!-- Article Content -->
        <div class="p-6 lg:p-8">
          <article class="content-article">
            <div class="markdown-content prose prose-slate max-w-none prose-lg 
              prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-4
              prose-a:text-blue-600 prose-a:underline hover:prose-a:text-blue-800 prose-a:font-medium
              prose-strong:text-gray-900 prose-strong:font-semibold
              prose-ul:my-4 prose-ul:space-y-1 prose-li:my-1
              prose-ol:my-4 prose-ol:space-y-1
              prose-img:rounded-lg prose-img:shadow-md prose-img:border prose-img:border-gray-200 prose-img:my-6
              prose-blockquote:border-l-4 prose-blockquote:border-blue-400 prose-blockquote:bg-blue-50 prose-blockquote:p-4 prose-blockquote:rounded-r-lg prose-blockquote:my-4
              prose-code:bg-gray-100 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm
              prose-table:my-4 prose-table:border-collapse prose-th:bg-gray-50 prose-th:border prose-th:border-gray-300 prose-th:px-3 prose-th:py-2 prose-td:border prose-td:border-gray-300 prose-td:px-3 prose-td:py-2">
              <slot />
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- Download Actions Section -->
    <section>
      <div class="mb-8">
        <slot name="actions" />
      </div>
    </section>

    <!-- Sharing Section -->
    <section>
      <SharingButtons 
        url={Astro.url.toString()} 
        title={title}
        description={`Kh√°m ph√° b·ªô th·∫ª Anki: ${title}. T·∫£i xu·ªëng ngay ƒë·ªÉ b·∫Øt ƒë·∫ßu h·ªçc t·∫≠p hi·ªáu qu·∫£!`}
      />
    </section>
  </main>
</BaseLayout>
