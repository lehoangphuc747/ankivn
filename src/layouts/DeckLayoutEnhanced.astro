---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Badge from '@/components/common/Badge.astro';
import ImageGallery from '@/components/decks/ImageGallery.astro';
import PreviewSection from '@/components/decks/PreviewSection.astro';
import SharingButtons from '@/components/common/SharingButtons.astro';

const { title, date, cover, category, subCategory, tags = [], author, authorLink, previewImages = [] } = Astro.props as { 
  title: string; 
  date?: string; 
  cover?: string;
  category?: string;
  subCategory?: string;
  tags?: string[];
  author?: string;
  authorLink?: string;
  previewImages?: Array<{
    src: string;
    alt: string;
  }>;
};
const displayCover = cover ?? '/default-thumbnail.webp';
---
<BaseLayout title={title}>
  <!-- Simplified Header Section -->
