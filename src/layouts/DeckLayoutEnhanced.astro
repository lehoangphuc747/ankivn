          {title}
        </h1>

        <!-- Meta Information Row -->
        <div class="flex flex-wrap justify-center items-center gap-4 text-sm">
          
          <!-- Category -->
          {category && (
            <a 
              href={`/decks?category=${encodeURIComponent(category)}`}
              class="inline-flex items-center px-3 py-1.5 bg-blue-100 hover:bg-blue-200 text-blue-800 hover:text-blue-900 font-medium rounded-lg border border-blue-200 hover:border-blue-300 transition-colors"
