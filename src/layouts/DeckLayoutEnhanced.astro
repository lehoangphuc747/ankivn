    <div class="container mx-auto px-4 py-8 max-w-4xl">
      
      <!-- Back Navigation -->
      <div class="mb-6">
        <a 
          href="/decks" 
          class="inline-flex items-center gap-4 px-4 py-2 bg-white hover:bg-gray-50 rounded-lg border border-gray-200 text-gray-700 hover:text-gray-900 transition-all duration-200 shadow-sm hover:shadow-md"
