---
import BaseLayout from '@/layouts/BaseLayout.astro';
const { title, date, author, tags, category, readingTime } = Astro.props as { 
  title: string; 
  date?: string; 
  author?: string;
  tags?: string[];
  category?: string;
  readingTime?: string;
};
---
<BaseLayout title={title}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <article class="prose prose-slate prose-lg max-w-none">
      <header class="mb-8 sm:mb-12 pb-8 border-b border-gray-200">
        {/* Category badge */}
        {category && (
          <div class="mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              {category}
            </span>
          </div>
        )}

        {/* Title */}
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight mb-6">
          {title}
        </h1>

        {/* Meta information */}
        <div class="flex flex-col sm:flex-row sm:items-center gap-4 text-sm text-gray-600">
          <div class="flex items-center gap-4">
            {date && (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <time datetime={date}>{new Date(date).toLocaleDateString('vi-VN', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}</time>
              </div>
            )}
            
            {author && (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>{author}</span>
              </div>
            )}

            {readingTime && (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{readingTime}</span>
              </div>
            )}
          </div>

          {/* Tags */}
          {tags && tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {tags.map(tag => (
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </div>
      </header>

      {/* Content */}
      <div class="markdown-content">
        <slot />
      </div>

      {/* Article footer */}
      <footer class="mt-12 pt-8 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          {/* Share buttons */}
          <div class="flex items-center gap-3">
            <span class="text-sm font-medium text-gray-700">Chia sẻ:</span>
            <div class="flex gap-2">
              <button
                onclick={`window.open('https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}', '_blank', 'width=550,height=420')`}
                class="p-2 text-gray-500 hover:text-blue-500 hover:bg-blue-50 rounded-lg transition-colors"
                aria-label="Chia sẻ trên Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </button>
              <button
                onclick={`window.open('https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}', '_blank', 'width=550,height=420')`}
                class="p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                aria-label="Chia sẻ trên Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </button>
            </div>
          </div>

          {/* Back to index */}
          <a 
            href="/blog" 
            class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
            </svg>
            Quay lại danh sách blog
          </a>
        </div>
      </footer>
    </article>
  </div>
</BaseLayout>

<style>
  /* Enhanced Markdown Styling */
  .markdown-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #374151;
    max-width: none;
  }

  /* Typography */
  .markdown-content h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #111827;
    margin: 2rem 0 1.5rem 0;
    line-height: 1.2;
    border-bottom: 3px solid #3b82f6;
    padding-bottom: 0.5rem;
  }

  .markdown-content h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin: 2.5rem 0 1rem 0;
    line-height: 1.3;
    position: relative;
    padding-left: 1rem;
  }

  .markdown-content h2::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(to bottom, #3b82f6, #06b6d4);
    border-radius: 2px;
  }

  .markdown-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #374151;
    margin: 2rem 0 0.75rem 0;
    line-height: 1.4;
  }

  .markdown-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #4b5563;
    margin: 1.5rem 0 0.5rem 0;
  }

  /* Paragraphs */
  .markdown-content p {
    margin: 1.25rem 0;
    line-height: 1.8;
  }

  /* Links */
  .markdown-content a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .markdown-content a:hover {
    color: #1d4ed8;
    border-bottom-color: #3b82f6;
  }

  /* Lists */
  .markdown-content ul, 
  .markdown-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .markdown-content ul li,
  .markdown-content ol li {
    margin: 0.75rem 0;
    line-height: 1.7;
  }

  .markdown-content ul li::marker {
    color: #3b82f6;
  }

  .markdown-content ol li::marker {
    color: #3b82f6;
    font-weight: 600;
  }

  /* Nested lists */
  .markdown-content ul ul,
  .markdown-content ol ol,
  .markdown-content ul ol,
  .markdown-content ol ul {
    margin: 0.5rem 0;
  }

  /* Blockquotes */
  .markdown-content blockquote {
    margin: 2rem 0;
    padding: 1.5rem 2rem;
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border-left: 4px solid #3b82f6;
    border-radius: 0 8px 8px 0;
    position: relative;
    font-style: italic;
    color: #1e40af;
  }

  .markdown-content blockquote::before {
    content: '"';
    position: absolute;
    top: -10px;
    left: 15px;
    font-size: 3rem;
    color: #3b82f6;
    opacity: 0.3;
  }

  .markdown-content blockquote p {
    margin: 0;
    font-size: 1.1rem;
  }

  /* Code */
  .markdown-content code {
    background: #f1f5f9;
    color: #e11d48;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-weight: 500;
    border: 1px solid #e2e8f0;
  }

  /* Code blocks */
  .markdown-content pre {
    background: #0f172a;
    color: #e2e8f0;
    padding: 1.5rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid #334155;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .markdown-content pre code {
    background: transparent;
    color: inherit;
    padding: 0;
    border: none;
    border-radius: 0;
    font-size: 0.95rem;
  }

  /* Tables */
  .markdown-content table {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .markdown-content th {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .markdown-content td {
    padding: 0.875rem 1rem;
    border-bottom: 1px solid #e5e7eb;
    background: white;
  }

  .markdown-content tr:nth-child(even) td {
    background: #f9fafb;
  }

  .markdown-content tr:hover td {
    background: #f3f4f6;
  }

  /* Images */
  .markdown-content img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
  }

  /* Horizontal rules */
  .markdown-content hr {
    margin: 3rem 0;
    border: none;
    height: 2px;
    background: linear-gradient(to right, transparent, #3b82f6, transparent);
  }

  /* Emphasis */
  .markdown-content strong {
    color: #111827;
    font-weight: 700;
  }

  .markdown-content em {
    color: #374151;
    font-style: italic;
  }

  /* Special styling for callouts */
  .markdown-content .callout {
    margin: 2rem 0;
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid;
  }

  .markdown-content .callout-info {
    background: #eff6ff;
    border-color: #3b82f6;
    color: #1e40af;
  }

  .markdown-content .callout-warning {
    background: #fffbeb;
    border-color: #f59e0b;
    color: #92400e;
  }

  .markdown-content .callout-error {
    background: #fef2f2;
    border-color: #ef4444;
    color: #dc2626;
  }

  .markdown-content .callout-success {
    background: #f0fdf4;
    border-color: #10b981;
    color: #047857;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .markdown-content {
      font-size: 1rem;
    }

    .markdown-content h1 {
      font-size: 2rem;
    }

    .markdown-content h2 {
      font-size: 1.5rem;
    }

    .markdown-content h3 {
      font-size: 1.25rem;
    }

    .markdown-content blockquote {
      padding: 1rem 1.5rem;
    }

    .markdown-content pre {
      padding: 1rem;
      border-radius: 8px;
    }

    .markdown-content table {
      font-size: 0.875rem;
    }

    .markdown-content th,
    .markdown-content td {
      padding: 0.75rem;
    }
  }

  /* Scroll margin for anchor links */
  .markdown-content h1,
  .markdown-content h2,
  .markdown-content h3,
  .markdown-content h4 {
    scroll-margin-top: 6rem;
  }

  /* Print styles */
  @media print {
    .markdown-content {
      font-size: 12pt;
      line-height: 1.6;
      color: black;
    }

    .markdown-content h1,
    .markdown-content h2,
    .markdown-content h3,
    .markdown-content h4 {
      color: black;
      page-break-after: avoid;
    }

    .markdown-content blockquote {
      background: #f5f5f5;
      border-left: 4px solid #666;
    }

    .markdown-content pre {
      background: #f5f5f5;
      border: 1px solid #ccc;
    }
  }
</style>
