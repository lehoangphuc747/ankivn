  level: "Cơ bản",
  duration: "25 phút",
  author: "AnkiVN Team",
  publishDate: "2024-01-15",
  tags: ["anki", "spaced repetition", "srs"]
};

const courseStructure = {
  modules: [
    {
      id: 'module-1',
      title: 'Module 1: Nền Tảng Ghi Nhớ Siêu Việt',
      lessons: [
        { title: 'Diễn giải Đường cong Lãng quên của Ebbinghaus', slug: 'Lesson-01-dien-giai-duong-cong-lang-quen-ebbinghaus' },
        { title: 'Spaced Repetition (SRS) - Giải pháp "Vá Lỗ Hổng"', slug: 'Lesson-02-spaced-repetition-srs-giai-phap-va-lo-hong' }
      ]
    }
    // Add other modules
  ]
};

const allLessons = courseStructure.modules.flatMap(m => m.lessons);
